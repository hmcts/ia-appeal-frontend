{% extends "includes/layout.njk" %}

{% from "button/macro.njk" import govukButton %}
{% from "error-summary/macro.njk" import govukErrorSummary %}
{% from "input/macro.njk" import govukInput %}

{% block content %}

    <h1 class="govuk-heading-xl">Your own reference number</h1>

    {% if errors|length %}

        {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: errorsSummary
        }) }}

    {% endif %}

    <form method="post">

        <div class="govuk-grid-row govuk-!-margin-bottom-5">
            <div class="govuk-grid-column-one-half">

                <p>If you prefer to use your own reference number for this case, you can enter it here. This is optional.</p>

                {{ govukInput({
                    label: {
                        text: 'Reference number (optional)'
                    },
                    id: "reference-number",
                    name: "reference-number",
                    value: referenceNumber,
                    errorMessage: errors.referenceNumber
                }) }}

            </div>
        </div>

        {{ govukButton({ text: "Continue" }) }}

    </form>

{% endblock %}
